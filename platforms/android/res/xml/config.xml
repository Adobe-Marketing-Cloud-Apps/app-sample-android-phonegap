<?xml version='1.0' encoding='utf-8'?>
<widget id="info.geometrixx.webviewapp" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Sync">
        <param name="android-package" value="com.adobe.phonegap.contentsync.Sync" />
    </feature>
    <feature name="Zip">
        <param name="android-package" value="com.adobe.phonegap.contentsync.Sync" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="ADBMobile_PhoneGap">
        <param name="android-package" value="com.adobe.ADBMobile_PhoneGap" />
    </feature>
    <name>Geometrixx</name>
    <description>
        Sample to illustrate the integration of managed web content with a native app
    </description>
    <author href="http://adobe.com">
        AEM Team
    </author>
    <content src="content/phonegap/geometrixx-webview/en.html" />
    <preference name="phonegap-version" value="3.6.0" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="handheld" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <icon src="icon.png" />
    <access origin="*" />
    <gap:platform name="android" />
</widget>

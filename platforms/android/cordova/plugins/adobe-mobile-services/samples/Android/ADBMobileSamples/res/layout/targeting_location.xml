<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="@drawable/background" android:id="@+id/linearLayout">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:background="#FF000000">
            <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="Targeting Location"
                      android:id="@+id/textView3" android:layout_margin="10dp" android:layout_gravity="center"
                      android:textSize="24dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:baselineAligned="false"
                      android:background="#CC000000" android:layout_margin="25dp" android:id="@+id/layoutTarget">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:text="@string/targetLocation" android:id="@+id/lblTargetText"
                      android:layout_gravity="center_horizontal" android:textSize="17dp"
                      android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                      android:singleLine="false"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Seattle, WA" android:id="@+id/button1"
                    android:layout_gravity="center_horizontal" android:onClick="targetSeattle" android:background="#505050"
                    android:textColor="@android:color/white" android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" android:layout_marginRight="20dp"
                    android:focusable="true" android:maxHeight="45dp" android:minHeight="30dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="San Jose, CA" android:id="@+id/button3" android:onClick="targetSanJose"
                    android:background="#505050" android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"
                    android:maxHeight="45dp" android:minHeight="30dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="New York City, NY" android:id="@+id/button2" android:onClick="targetNewYork"
                    android:background="#505050" android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"
                    android:maxHeight="45dp" android:minHeight="30dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Dallas, TX" android:id="@+id/button" android:layout_gravity="center"
                    android:onClick="targetDallas" android:background="#505050"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:textColor="@android:color/white" android:layout_marginTop="20dp" android:singleLine="false"
                    android:minHeight="30dp" android:maxHeight="45dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Miami, FL" android:id="@+id/button4"
                    android:layout_gravity="center_horizontal" android:onClick="targetMiami" android:background="#505050"
                    android:textColor="@android:color/white" android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp" android:maxHeight="45dp"
                    android:minHeight="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="@drawable/background" android:id="@+id/linearLayout">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:background="#FF000000">
            <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:text="Privacy" android:id="@+id/textView3" android:layout_margin="10dp"
                      android:layout_gravity="center" android:textSize="24dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:baselineAligned="false"
                      android:background="#CC000000" android:layout_margin="25dp">
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Set privacy to Opt In" android:id="@+id/button1" android:layout_gravity="center_horizontal"
                    android:onClick="setOptIn" android:background="#505050"
                    android:textColor="@android:color/white" android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:longClickable="true"
                    android:minHeight="30dp" android:maxHeight="45dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Set privacy to Opt Out" android:id="@+id/button3"
                    android:onClick="setOptOut" android:background="#505050"
                    android:textColor="@android:color/white" android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                    android:minHeight="30dp" android:maxHeight="45dp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Set privacy to Opt Unknown" android:id="@+id/button2"
                    android:onClick="setOptUnknown" android:background="#505050"
                    android:textColor="@android:color/white" android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                    android:minHeight="30dp" android:maxHeight="45dp"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:text="@string/privacy" android:id="@+id/textView1"
                      android:layout_gravity="center_horizontal" android:textSize="14dp"
                      android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                      android:singleLine="false"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:text="Send trackAction(...) hit" android:id="@+id/button" android:layout_gravity="center"
                    android:onClick="trackActionPrivacy" android:background="#505050"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:textColor="@android:color/white" android:layout_marginTop="10dp"
                    android:singleLine="false" android:layout_marginBottom="20dp"
                    android:minHeight="30dp" android:maxHeight="45dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
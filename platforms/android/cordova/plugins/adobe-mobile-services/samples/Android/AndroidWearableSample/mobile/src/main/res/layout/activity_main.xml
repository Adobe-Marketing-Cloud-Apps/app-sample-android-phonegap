<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track State"
        android:id="@+id/TrackState"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Action"
        android:id="@+id/TrackAction"
        android:layout_below="@+id/TrackState" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set UserIdentifier"
        android:id="@+id/SetUserIdentifier"
        android:layout_below="@+id/TrackAction"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Privacy Status Opt-Out"
        android:id="@+id/SetPrivacyOptOut"
        android:layout_below="@+id/SetUserIdentifier"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Privacy Status Opt-In"
        android:id="@+id/SetPrivacyOptIn"
        android:layout_below="@+id/SetPrivacyOptOut" />
</RelativeLayout>
